extends layout 

block content
    div 
        img(src=`${products.imagePath}`, alt=`${products.name}` width=200)
        p Name: #{products.name}
        p Description: #{products.description}
        p Price: #{products.currency} #{products.formattedPrice}
        p Posted: #{products.timePosted.toLocaleTimeString()} on #{products.timePosted.toDateString()}
    form(action=`/shop/${userId}/cart/add/${products._id}` method='POST')
        div
        button(type='submit' class="bg-green-600 text-white px-4 py-2 rounded-3xl border border-blue-900 hover:bg-green-800") Add to Cart
    br
    form(action=`/shop/${userId}/products/${products._id}/message` method='GET')
        div
        button(type='submit' class="bg-green-600 text-white px-4 py-2 rounded-3xl border border-blue-900 hover:bg-green-800") Add to Cart

