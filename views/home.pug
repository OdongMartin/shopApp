extends layout 

block content
    div 
        each product in products 
            img(src=`${product.imagePath}`, alt=`${product.name}` width=200)
            p Name: #{product.name}
            p Description: #{product.description}
            p Price: #{product.currency} #{product.formattedPrice}
            p Posted at At: #{product.timePosted.toLocaleTimeString()} on #{product.timePosted.toDateString()}


