extends layout 

block content
    div(class="grid grid-cols-4 m-2")
        div(class="col-span-3")
            if(stores)
                div(class="grid grid-cols-3")
                    each store in stores
                        div(class="col-span-1 m-4") 
                            a(href= `/shop/${userId}/myStores/${store._id}`)
                                img(src=`${store.imagePath1}`, alt=`${store.name}` class="mx-auto w-full h-40 object-cover rounded-t-lg")
                                p(class="m-2 text-lg truncate") #{store.name}
                                p(class="m-2") #{store.description}
                            

        div(class="col-span-1")
            form(action=`/shop/${userId}/myStores/create` method='GET')
                div
                    button(type='submit' class="bg-green-600 text-white px-4 py-2 rounded-3xl border border-blue-900 hover:bg-green-800") Create Store


