extends layout

block content
    div(class="hidden")#chatId #{chatId}
    div(class=" grid grid-cols-4")
        div(class="relative col-span-3")
            //Display chat messages
            div(class="")#typing

            div(class="flex-grow overflow-y-auto bg-blue-900")
                div(class="flex flex-col space-y-2 p-4")
                    div#chat-messages
            //-Chat messages will be appended here dynamically
            //div.hidden#chatId #{productId}#{userId}#{receiverId}
            //Input field to send messages
            div(class=" fixed bottom-2 right-1/2 p-4 flex items-center")
                input#message-input(name='message' type="text" placeholder='Type your message...' minlength='1' maxlength='300' required class='p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500 mt-4')
                button#send(type='button' onclick='sendMessage()') Send
        
        div(class="col-span-1 bg-white w-full h-screen")
            div(class="m-3")
                        h(class=" text-lg font-bold") Information 
                        ul(class="list-disc p-2")
                            li(class="mb-2") Chat with the store and discuss how you can get the products to you.

    script(src="https://cdn.socket.io/4.0.1/socket.io.min.js").
    script(src="/javascripts/io.js").
        