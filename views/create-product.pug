extends layout

block content
  h1.font-bold.text-xl Create Task
  div
    form(action='/shop/product/create', method='POST')
      div
        div
          label(for='title') New Product:
        div
          input(type='text', name='title', id='title', maxlength="15",required, class="mb-3 p-2 rounded-xl bg-gray-700 text-white w-96")
      div
        div
          label(for='description') Product Description:
        div
          textarea(cols='50' rows='5' type='text', name='description', id='description', maxlength="55", required, class="mb-3 p-2 rounded-xl bg-gray-700 text-white")
      div
        div
          label(for='price') Price:
        div
          input(type='number', name='price', id='price', required, class="mb-3 p-2 rounded-xl bg-gray-700 text-white")

      div
        button(type='submit' class="bg-green-600 text-white px-4 py-2 rounded-3xl border border-blue-900 hover:bg-green-800") Create Product