extends layout 

block content
    //- div(class="grid grid-cols-4")
    div(class="min-h-screen", style="width:1080px;")

        div(class="relative")
            img(src=`${stores.imagePath2}`, alt=`${stores.name}` class="h-40 w-full object-cover")
            div(class="absolute bottom-0 mt-8 ml-4 border bg-gray-300 rounded-2xl")
                img(src=`${stores.imagePath1}`, alt=`${stores.name}` class="w-20 h-20 rounded-2xl p-1")
        
        div(class="bg-[#3a3d72] p-2 mb-2 ")
            div(class="flex justify-between")
                div
                    p(class="text-xl text-white p-2") #{stores.name}
                    p(class="p-2 text-white") #{stores.description}

                div(class="")
                    div(class="m-2")
                        form(action=`/shop/${userId}/myStores/${stores._id}/edit` method='GET')
                            button(type='submit' class="border border-white bg-green-700 hover:bg-green-900 text-white p-1.5 rounded-lg transition ease-out duration-500")
                                <svg class='w-4 md:w-5 inline-block' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                </svg> Edit Store

                    div(class="m-2")
                        form(action=`/shop/${userId}/myStores/${stores._id}/delete` method='POST')
                            button(type='submit' class="border border-white bg-red-600 hover:bg-red-900 text-white p-1.5 rounded-lg transition ease-out duration-500")
                                <svg class='w-4 md:w-5 inline-block' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg> Delete Store
    
                //-p Posted: #{product.timePosted.toLocaleTimeString()} on #{product.timePosted.toDateString()}  
            div(class="m-2")
                form(action=`/shop/${userId}/myStores/${stores._id}/products/create` method='GET')
                        button(type='submit' class="border border-white bg-green-700 hover:bg-green-900 text-white p-1.5 rounded-lg transition ease-out duration-500 ")
                            <svg class='w-4 md:w-5 inline-block' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 7.5h-.75A2.25 2.25 0 0 0 4.5 9.75v7.5a2.25 2.25 0 0 0 2.25 2.25h7.5a2.25 2.25 0 0 0 2.25-2.25v-7.5a2.25 2.25 0 0 0-2.25-2.25h-.75m0-3-3-3m0 0-3 3m3-3v11.25m6-2.25h.75a2.25 2.25 0 0 1 2.25 2.25v7.5a2.25 2.25 0 0 1-2.25 2.25h-7.5a2.25 2.25 0 0 1-2.25-2.25v-.75" />
                            </svg> Post Product

                  


        div(class="flex justify-center items-center")
            div(class="grid grid-cols-4")
                each product in products
                    div(class="col-span-1 m-2 h-72 w-60 bg-gray-300 rounded-lg shadow-xl hover:shadow-2xl hover:scale-105 transition ease-in-out duration-400")
                        a(href= `/shop/${userId}/products/${product._id}`)
                            div
                                img(src=`${product.imagePath1}`, alt=`${product.name}` class="mx-auto w-full h-40 object-cover rounded-t-lg")
                                p(class="m-2 text-lg truncate") #{product.name}
                                //-p Description: #{product.description}
                                p(class="m-2") #{product.currency} #{product.formattedPrice}
                                //-p Posted: #{product.timePosted.toLocaleTimeString()} on #{product.timePosted.toDateString()}
                        //- submit button
                        div(class="m-2")
                            form(action=`#` method='POST')
                                button(type='submit' class="bg-green-700 hover:bg-green-900 text-white p-1.5 rounded-lg ")
                                    <svg class='w-4 md:w-5 inline-block' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                    </svg> Edit Product
